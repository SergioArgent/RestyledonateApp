<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Restyledonate" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/amarillo</item>
        <item name="colorPrimaryVariant">@color/jadesuave</item>
        <item name="colorOnPrimary">@color/gris</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/gris</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="SpinnerStyle">
        <item name="android:textColor">@android:color/white</item> <!-- Letras en negro -->
        <item name="android:background">@android:color/black</item> <!-- Fondo blanco -->
    </style>
</resources>