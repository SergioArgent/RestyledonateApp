<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/jade"
    android:layout_gravity="top|center"
    app:cardCornerRadius="6dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img1"
            android:layout_width="130dp"
            android:layout_height="117dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="6dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:src="@mipmap/ic_launcher"
            app:civ_border_color="@color/amarillo"
            app:civ_border_width="2dp">

        </de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:id="@+id/nombredonaciontext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/img1"
            android:text="Nombre"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold"
            app:textAllCaps="false"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/propietariotext"
            android:text="Propietario"
            android:textSize="10sp"
            android:gravity="center"
            android:textColor="@color/amarillo"
            android:layout_toRightOf="@+id/img1"
            android:layout_below="@+id/nombredonaciontext"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            ></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tipotext"
            android:text="Tipo"
            android:textSize="15sp"
            android:gravity="right"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/img1"
            android:layout_below="@+id/propietariotext"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            ></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/preciotext"
            android:text="Precio"
            android:textSize="20sp"
            android:gravity="right"
            android:textColor="@color/amarillo"
            android:layout_toRightOf="@+id/img1"
            android:layout_below="@+id/tipotext"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            ></TextView>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
